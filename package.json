{
  "name": "exo",
  "version": "0.0.1",
  "description": "Source code for the exo website",
  "main": "index.js",
  "scripts": {
    "lint:app": "npm --prefix app run lint:fix",
    "lint:functions": "npm --prefix functions run lint:fix",
    "deploy": "firebase deploy",
    "cleanup": "del-cli \"public/**\" \"!public\" \"!public/admin\" \"!public/collections\" \"!public/uploads\"",
    "copy:collections": "cp -r public/collections app/dist/",
    "copy:app": "cp -r app/dist/static/* public/",
    "build:app": "npm --prefix app run build && npm run copy:collections && npm --prefix app run build:scully && npm run cleanup && npm run copy:app",
    "collection:listen": "http-server -p 3000 -c-1 public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Jaspero/exo.git"
  },
  "keywords": [
    "jam",
    "firebase",
    "scully",
    "angular"
  ],
  "author": "Jaspero Ltd",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Jaspero/exo/issues"
  },
  "homepage": "https://github.com/Jaspero/exo#readme",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-commit": "git update-index -g"
    }
  },
  "lint-staged": {
    "*.{ts,json}": [
      "prettier --write",
      "git add"
    ],
    "app/**/*.{ts}": [
      "npm run lint:app",
      "git add"
    ],
    "functions/**/*.{ts}": [
      "npm run lint:functions",
      "git add"
    ]
  },
  "devDependencies": {
    "del-cli": "3.0.0",
    "firebase-tools": "8.0.2",
    "http-server": "0.12.1",
    "husky": "4.2.5",
    "lint-staged": "10.1.3",
    "prettier": "2.0.4"
  }
}
